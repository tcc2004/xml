</company> -->
<company xmlns:hr="http://company.com/hr" xmlns:dep="http://company.com/department">
    <dep:department name="Kế toán">
        <hr:employee id="E001">
            <hr:name>Nguyễn Văn A</hr:name>
            <hr:position>Kế toán trưởng</hr:position>
        </hr:employee>
        <hr:employee id="E002">
            <hr:name>Trần Thị B</hr:name>
            <hr:position>Kế toán viên</hr:position>
        </hr:employee>
    </dep:department>
    <dep:department name="Nhân sự">
        <hr:employee id="E003">
            <hr:name>Lê Văn C</hr:name>
            <hr:position>Trưởng phòng nhân sự</hr:position>
        </hr:employee>
        <hr:employee id="E004">
            <hr:name>Phạm Thị D</hr:name>
            <hr:position>Chuyên viên nhân sự</hr:position>
        </hr:employee>
    </dep:department>
</company>
